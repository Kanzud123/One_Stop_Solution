@using PagedList.Mvc
@model  PagedList.IPagedList<WebApplication1.Models.tbl_category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse" style="">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("ViewCategory", "Admin")"><p style="font-size:25px;color:darkred;">OneStopSolution</p></a>
            </div>
            <ul class="nav navbar-nav">

                <li style="margin-left:700px;font-size:large;">    @Html.ActionLink("Create New Category", "Create")</li>
                <li style="margin-left:0px;font-size:large;">    @Html.ActionLink("Users Available", "userlist")</li>
                <li style="margin-left:0px;font-size:large;">    @Html.ActionLink("Orders", "orderlist")</li>
                <li style="margin-left:0px;font-size:large;">  @Html.ActionLink("Sign Out", "Signout", "User", null, new { @class = "ht" })</li>
            </ul>
           
</div>
    </nav>
    <div class="container" style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                <img src="~/Content/img/one.png" style="width:100%; height:100%" />


            </div>

        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.cat_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.cat_name, "AdsCat", new { id = @item.cat_id })</h4>


                    </div>

                }
            }








        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
        </div>
    </div>
</body>
</html>

