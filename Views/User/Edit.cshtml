@model WebApplication1.Models.tbl_user
@{
    Layout = null;
    ViewBag.Title = "Edit";
}




<div class="w3-container" style="padding-left:60px">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.u_id)

        <div class="form-horizontal">
            <h2>Edit</h2>
            <hr />

            <p>Username</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.u_name, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <div class="form-horizontal">

            <hr />

            <p>Email</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.u_email, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <div class="form-horizontal">

            <hr />

            <p>Password</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <div class="form-horizontal">

            <hr />

            <p>Image</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.u_image, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <div class="form-horizontal">

            <hr />

            <p>Contact Number</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.u_contact, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    }

</div>
